{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "noEmit": false,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true, 
    "moduleResolution": "node",
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}